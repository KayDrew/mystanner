            --primary-purple: #a55eea;
            --text-dark: #2c3e50;
            --text-light: #7f8c8d;
            --bg-light: #f9f9f9;
            --card-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background-color: var(--bg-light);
            color: var(--text-dark);
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        /* Updated to match original navigation style exactly */
        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        
        header img {
            height: 40px;
        }
        
        header button {
            background: none;
            border: none;
            color: var(--primary-indigo);
            cursor: pointer;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            gap: 5px;
        }
        
        header button i {
            font-size: 1rem;
        }

        h1 {
            color: var(--primary-indigo);
            margin-bottom: 10px;
        }

        .subtitle {
            color: var(--text-light);
            font-size: 1.1rem;
            margin-bottom: 20px;
        }

        .dashboard-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .card {
            background: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: var(--card-shadow);
            transition: transform 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
        }

        .card-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 1px solid #eee;
        }

        .card-title {
            font-size: 1.2rem;
            color: var(--text-dark);
            font-weight: 600;
        }

        .time-period {
            background-color: var(--light-indigo);
            color: var(--primary-indigo);
            padding: 5px 10px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .stat-number {
            font-size: 2.5rem;
            font-weight: 700;
            margin: 10px 0;
            color: var(--primary-indigo);
        }

        .stat-change {
            display: flex;
            align-items: center;
            font-size: 0.9rem;
            color: var(--text-light);
            margin-bottom: 15px;
        }

        .change-up {
            color: var(--primary-green);
        }

        .change-down {
            color: #e74c3c;
        }

        .reaction-breakdown {
            margin-top: 15px;
        }

        .reaction-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 8px 0;
            border-bottom: 1px solid #f0f0f0;
        }

        .reaction-item:last-child {
            border-bottom: none;
        }

        .reaction-type {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .reaction-icon {
            width: 24px;
            height: 24px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
        }

        .like { background-color: var(--primary-blue); }
        .love { background-color: var(--primary-pink); }
        .laugh { background-color: var(--primary-yellow); }
        .wow { background-color: var(--primary-purple); }
        .sad { background-color: var(--primary-indigo); }
        .angry { background-color: #e74c3c; }

        .reaction-count {
            font-weight: 600;
        }

        .reaction-percentage {
            color: var(--text-light);
            font-size: 0.8rem;
        }

        .graph-placeholder {
            height: 150px;
            background-color: var(--light-blue);
            border-radius: 5px;
            margin-top: 15px;
            position: relative;
            overflow: hidden;
        }

        .graph-placeholder::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(90deg, var(--primary-blue), var(--primary-indigo));
            opacity: 0.7;
            clip-path: polygon(0% 100%, 0% 50%, 10% 60%, 20% 40%, 30% 60%, 40% 30%, 50% 70%, 60% 40%, 70% 60%, 80% 30%, 90% 50%, 100% 20%, 100% 100%);
        }

        .best-times {
            grid-column: 1 / -1;
            background-color: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: var(--card-shadow);
        }

        .best-times-header {
            text-align: center;
            margin-bottom: 20px;
        }

        .best-times-title {
